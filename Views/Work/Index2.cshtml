@model IEnumerable<CV_Chandan_Rajendra.Models.Work>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<table class="table table-hover">

    <tbody>
        @foreach (var item in Model)
        {

            <div class="alert alert-dismissible alert-light">
                <div class="col-md-16">
                    <div class="row">
                        <div class="col-md-6">
                            
                            <h2><a href=@Html.DisplayFor(modelItem => item.Company_link)> @Html.DisplayFor(modelItem => item.Company)</a></h2>
                            <p><img src= @Html.DisplayFor(modelItem => item.logo) alt="logo" width="150" height="75"></p>
                        </div>

                        <div class="col-md-6">
                            <p>Worked as: <b> @Html.DisplayFor(modelItem => item.Job_pos)</b> </p>
                            <p>
                                @Html.DisplayFor(modelItem => item.Description)
                            </p>
                            <p>
                                Work Place: <b>@Html.DisplayFor(modelItem => item.Place) </b>   \\\Joining year: @Html.DisplayFor(modelItem => item.Year) <br /> Experience: @Html.DisplayFor(modelItem => item.Experience) years
                            </p>    


                        </div>
                    </div>
                </div>
                <p>
                    Skills:  <a href="/Skills/Index"> @Html.DisplayFor(modelItem => item.list_skills)</a>
</p>
                <p>
                    Number of Projects completed:<b>@Html.DisplayFor(modelItem => item.Projects)</b>
                    
                </p>
            </div>
        }




    </tbody>



</table>

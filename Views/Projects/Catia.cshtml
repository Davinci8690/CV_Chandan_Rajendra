@model IEnumerable<CV_Chandan_Rajendra.Models.Catia_projects>

@{
    ViewBag.Title = "CATIA V5";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Catia V5</h2>


<table class="table table-hover">

    <tbody>
        @foreach (var item in Model)
        {

            <div class="alert alert-dismissible alert-light">
                <div class="col-md-16">
                    <div class="row">
                        <div class="row">
                            <h4>Project @Html.DisplayFor(modelItem => item.Id): <b>@Html.DisplayFor(modelItem => item.Name)</b> </h4>
                            
                        </div>
                       
                        <div class="col-md-6">

                            <p><img src=@Html.DisplayFor(modelItem => item.Image_loc) alt="logo" width="500" height="250"></p>
                        </div>

                        <div class="col-md-6">
                            <p>
                                <img src=@Html.DisplayFor(modelItem => item.img_loc2d) alt="logo" width="500" height="250">
                            </p>

                        </div>
                    </div>
                    <p>
                        Functions used : <b>@Html.DisplayFor(modelItem => item.Description)</b> 
                    </p>
                </div>
            </div>
        }




    </tbody>



</table>
